{
    "compilerOptions": {
      "emitDecoratorMetadata": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["es5"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "es5",
      "experimentalDecorators": true
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }